@model Shop.DTOs.ItemDTO

@{
    ViewData["Title"] = "Index";
}

<h1>View</h1>
<br/>
<div>
    <h4>@Html.DisplayNameFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Precio:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Vendidos:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoldQuantity)
        </dd>
        <dt class = "col-sm-2">
            Disponibles:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableQuantity)
        </dd>
        <dt class = "col-sm-2">
            Descripción:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemLargeDescription)
        </dd>
    </dl>
</div>
